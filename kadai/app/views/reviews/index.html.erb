<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Content</th>
      <th>Book</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.content %></td>
        <td><%= review.book.title %></td>
        <td><%= review.user.email %></td>
        <td><%= link_to 'Show', book_review_path(review.book, review) %></td>
        <td><%= link_to 'Edit', edit_book_review_path(review.book, review) %></td>
        <td><%= link_to 'Destroy', book_review_path(review.book, review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_book_review_path %>
<%= link_to 'Back', books_path %>
